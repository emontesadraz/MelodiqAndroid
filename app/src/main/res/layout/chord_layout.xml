<?xml version="1.0" encoding="utf-8"?>
            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                tools:context=".ui.learning.ChordLearningActivity">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Aprende los sonidos de estos acordes"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <GridLayout
                    android:id="@+id/chord_grid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_title">

                    <!-- Acorde Do Mayor -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_c_major"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Do Mayor"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/img_c_chord"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="8dp"
                                android:contentDescription="Diagrama Do Mayor" />

                            <Button
                                android:id="@+id/btn_play_c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Escuchar" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Acorde La Menor -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_a_minor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="La Menor"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/img_a_chord"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="8dp"
                                android:contentDescription="Diagrama La Menor" />

                            <Button
                                android:id="@+id/btn_play_a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Escuchar" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Acorde Fa Mayor -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_f_major"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Fa Mayor"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/img_f_chord"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="8dp"
                                android:contentDescription="Diagrama Fa Mayor" />

                            <Button
                                android:id="@+id/btn_play_f"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Escuchar" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Acorde Sol Mayor -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_g_major"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Sol Mayor"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/img_g_chord"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="8dp"
                                android:contentDescription="Diagrama Sol Mayor" />

                            <Button
                                android:id="@+id/btn_play_g"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Escuchar" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>